public static void calcDiff(int [][]x)
    {
     int diag1=0,diag2=0;
     for (int i=0;i<x.length;i++)
        {
            diag1+=x[i][i];
            diag2+=x[i][x.length-i-1];
        }
        int diff = diag2-diag1;
        if (diff<0)
        diff*=-1;
        System.out.println("Difference is : "+ diff);
    }
